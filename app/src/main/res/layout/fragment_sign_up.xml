<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SignUpFragment">

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/rounded_corners_top"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.785">

        <TextView
            android:id="@+id/bannerTextView"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingHorizontal="24dp"
            android:text="@string/please_check_your_input"
            android:textAlignment="center"
            android:textColor="@color/error_color"
            android:textSize="20sp"
            android:textStyle="italic"
            android:visibility="invisible" />

        <!-- Username  -->
        <TextView
            android:id="@+id/usernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="50dp"
            android:gravity="start"
            android:labelFor="@+id/usernameLabel"
            android:text="@string/username"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/usernameTextView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="username"
            android:background="@drawable/round_corners_black_border"
            android:hint="@string/username"
            android:inputType="text"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/light_grey"
            android:textSize="18sp" />

        <!-- Email  -->
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="50dp"
            android:gravity="start"
            android:labelFor="@id/emailTextView"
            android:text="@string/email"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/emailTextView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="emailAddress"
            android:background="@drawable/round_corners_black_border"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/light_grey"
            android:textSize="18sp" />

        <!-- Password  -->
        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="50dp"
            android:gravity="start"
            android:labelFor="@+id/passwordLabel"
            android:text="@string/password"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/passwordTextView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="password"
            android:background="@drawable/round_corners_black_border"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/light_grey"
            android:textSize="18sp" />

        <!-- First name  -->
        <TextView
            android:id="@+id/firstNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="50dp"
            android:labelFor="@+id/firstNameTextView"
            android:text="@string/first_name"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/firstNameTextView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="firstname"
            android:background="@drawable/round_corners_black_border"
            android:hint="@string/first_name"
            android:inputType="textPersonName"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/light_grey"
            android:textSize="18sp" />

        <!-- Last name  -->
        <TextView
            android:id="@+id/lastNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="50dp"
            android:labelFor="@+id/lastNameTextView"
            android:text="@string/last_name"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/lastNameTextView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="lastname"
            android:background="@drawable/round_corners_black_border"
            android:hint="@string/last_name"
            android:inputType="textPersonName"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/light_grey"
            android:textSize="18sp" />

        <!-- Birthdate  -->
        <TextView
            android:id="@+id/birthDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="50dp"
            android:labelFor="@+id/birthDateTextView"
            android:text="@string/birthdate"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/birthDateTextView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="25dp"
            android:autofillHints="birthdate"
            android:background="@drawable/round_corners_black_border"
            android:hint="@string/birthdate"
            android:inputType="datetime"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/light_grey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/create_button"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/light_green"
            android:text="@string/create_new_account"
            android:textColor="@color/dark_blue" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/light_green"
            android:text="@string/cancel"
            android:textColor="@color/dark_blue" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>